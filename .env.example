# SPRITE FORGE Environment Variables
# Copy this file to .env.local and fill in actual values

# ===========================================
# REQUIRED FOR V1
# ===========================================

# Replicate API (image generation) - NEVER COMMIT REAL KEY
REPLICATE_API_TOKEN=your_replicate_api_token_here

# ===========================================
# APP CONFIGURATION
# ===========================================

# Public URL (set by Vercel automatically in production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App name
NEXT_PUBLIC_APP_NAME=SPRITE FORGE

# ===========================================
# FEATURE FLAGS (optional)
# ===========================================

# Enable webcam capture
NEXT_PUBLIC_ENABLE_WEBCAM=true

# ===========================================
# V2+ (not needed for initial launch)
# ===========================================

# Storage (when persistence is needed)
# BLOB_READ_WRITE_TOKEN=

# Database (when accounts are added)
# DATABASE_URL=

# Payments (when monetization is added)
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=
